<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.MindSpace" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- Remove the default Action Bar -->
        <item name="android:windowActionBar">false</item>  <!-- Disables default ActionBar -->
        <item name="android:windowNoTitle">true</item>     <!-- No title bar -->

        <!-- Optional: Use a custom ActionBar style if needed -->
        <item name="actionBarStyle">@style/ThemeActionBar</item>
        <item name="windowActionBarOverlay">true</item>

        <item name="android:textColor">@color/my_dark_text</item>
        <item name="android:textColorHint">@color/my_dark_hint</item> <!-- Hint text color -->
        <item name="colorSecondaryContainer">@color/my_dark_border</item>
        <item name="colorControlHighlight">@color/ripple_color</item>

    </style>
</resources>
